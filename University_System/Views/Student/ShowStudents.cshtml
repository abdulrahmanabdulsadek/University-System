@{
    int i = 1;
}


@model List<Student>
<a class="btn btn-warning mb-3" href="/Student/Add">Add Student</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (Student std in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@std.Fname</td>
                <td>@std.Email</td>
                <td>@std.Address</td>
                <td class="text-center">
                    <a class="btn btn-danger btn-sm me-2" href="/Student/DeleteStudent?sid=@std.Sid">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                    <a class="btn btn-primary btn-sm" href="/Student/EditStudent?sid=@std.Sid">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
